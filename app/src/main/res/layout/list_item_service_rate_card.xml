<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_5ssp"
        android:background="@drawable/button_border"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/service_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/clanpro_medium"
            android:padding="12dp"
            android:text="Service name"
            android:textColor="@color/colorPrimaryText"
            android:textSize="@dimen/text_small"
            android:textStyle="bold" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_5sdp"
            android:background="@drawable/button_border">

            <TextView
                android:id="@+id/per_km"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/clanpro_medium"
                android:padding="12dp"
                android:textColor="@color/colorPrimaryText"
                android:textSize="@dimen/text_small" />

            <TextView
                android:id="@+id/per_minute"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/per_km"
                android:fontFamily="@font/clanpro_medium"
                android:padding="12dp"
                android:textColor="@color/colorPrimaryText"
                android:textSize="@dimen/text_small" />

            <TextView
                android:id="@+id/base_km"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/per_minute"
                android:fontFamily="@font/clanpro_medium"
                android:padding="12dp"
                android:textColor="@color/colorPrimaryText"
                android:textSize="@dimen/text_small" />

            <TextView
                android:id="@+id/base_fare"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/base_km"
                android:fontFamily="@font/clanpro_medium"
                android:padding="12dp"
                android:textColor="@color/colorPrimaryText"
                android:textSize="@dimen/text_small" />

        </RelativeLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>